<p id="notice"><%= notice %></p>

<h1>Set up games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= link_to 'Show', game, :class => "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_game_path(game), :class => "btn btn-link" %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path, :class => "btn btn-light" %>

<br>
<%= link_to 'Back', root_path, :class => "btn btn-link" %>
